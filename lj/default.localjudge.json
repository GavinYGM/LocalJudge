[
  {
    "name": "C",
    "extensions": [
      ".c"
    ],
    "dest": "${stem}${exe_if_win}",
    "compile": "gcc ${src} -o ${dest} -Wall -std=c99 -pipe ${flag_win} -lm",
    "run": "${dest}"
  },
  {
    "name": "C++",
    "extensions": [
      ".cpp",
      ".cxx",
      ".cc"
    ],
    "dest": "${stem}${exe_if_win}",
    "compile": "g++ ${src} -o ${dest} -Wall -std=c++14 -pipe ${flag_win} -lm",
    "run": "${dest}"
  },
  {
    "name": "Python",
    "extensions": [
      ".py"
    ],
    "dest": "${stem}.pyc",
    "compile": "python -c \"import py_compile; py_compile.compile(r'${src}',r'${dest}')\"",
    "run": "python ${dest}"
  },
  {
    "name": "Java",
    "extensions": [
      ".java"
    ],
    "dest": "${temp_dir}/Main.class",
    "compile": "javac -J-Xms32m -J-Xmx256m ${src} -d ${temp_dir}",
    "run": "java -classpath ${temp_dir} Main"
  }
]